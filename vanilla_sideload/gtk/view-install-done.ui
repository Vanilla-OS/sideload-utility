<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="SideloaderInstallDone" parent="AdwBin">
    <child>
      <object class="AdwStatusPage" id="status">
        <property name="icon-name">emblem-ok-symbolic</property>
        <property name="title" translatable="yes">Installation complete</property>
        <property name="description" translatable="yes">The package was successfully installed.</property>
        <child>
          <object class="GtkBox">
            <property name="halign">3</property>
            <property name="spacing">10</property>
            <child>
              <object class="GtkButton">
                <property name="action-name">app.quit</property>
                <property name="label" translatable="yes">Done</property>
                <style>
                  <class name="pill"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="btn_open">
                <property name="label" translatable="yes">Open</property>
                <style>
                  <class name="pill"/>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>